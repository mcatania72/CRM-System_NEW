// Jenkinsfile Semplificato per Debug

pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                cleanWs()
                git url: 'https://github.com/mcatania72/CRM-System_NEW.git', branch: 'main'
            }
        }

        stage('Build and Minimal Test') {
            steps {
                script {
                    echo 'Avvio container...'
                    sh "docker-compose -f devops-pipeline-fase-2/docker-compose.yml up --build -d"
                    
                    echo 'Attendo 30 secondi...'
                    sleep 30

                    echo 'Eseguo lo script di test semplificato...'
                    sh 'chmod +x devops-pipeline-fase-2/test-containers.sh'
                    sh './devops-pipeline-fase-2/test-containers.sh'
                }
            }
        }
    }

    post {
        always {
            script {
                echo 'Pulizia ambiente...'
                sh "docker-compose -f devops-pipeline-fase-2/docker-compose.yml down --volumes"
            }
        }
    }
}
